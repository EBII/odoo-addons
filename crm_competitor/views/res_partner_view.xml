<?xml version="1.0"?>
<openerp>
    <data>

        <record id="crm_competitor_view_partner_form" model="ir.ui.view">
            <field name="name">crm_competitor_view_partner_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="call_won_leads"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-trophy"
                            attrs="{'invisible': [('won_leads_count', '=', 0)]}">
                        <field name="won_leads_count" widget="statinfo" string="Won leads"/>
                    </button>                
                </xpath>
                
                <xpath expr="//group[@name='purchase']" position="after">
                    <group string="Competition" name="competition">
                        <field name="competitor"/>
                    </group>
                </xpath>
                
                <xpath expr="//field[@name='child_ids']/form/sheet/field[@name='customer']" position="after">
                    <field name="competitor" invisible="True"/>
                </xpath>
            </field>
        </record>
        
       <record id="crm_competitor_view_res_partner_filter" model="ir.ui.view">
            <field name="name">crm_competitor_view_res_partner_filter</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='supplier']" position="after">
                    <filter string="Competitors" name="competitor" domain="[('competitor','=',1), ('parent_id', '=', False)]"/>
                </xpath>
            </field>
        </record>
        
        
       
        <record id="action_partner_competitor_form" model="ir.actions.act_window">
            <field name="name">Competitors</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_competitor":1}</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a competitor in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a competitor; discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
       
        <menuitem id="menu_partner_competitor_form" parent="base.menu_sales" action="action_partner_competitor_form" sequence="4"/>       
    </data>
</openerp>
