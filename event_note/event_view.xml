<?xml version="1.0"?>
<openerp>
    <data>

        <record id="event_note_view" model="ir.ui.view">
            <field name="name">event_note_view</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page string="Notes">
                        <field name="note"/>
                    </page>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>

