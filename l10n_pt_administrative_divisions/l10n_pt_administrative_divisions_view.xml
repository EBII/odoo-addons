<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="l10n_pt_administrative_divisions_view_partner_form" model="ir.ui.view">
            <field name="name">l10n_pt_administrative_divisions_view_partner_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <field name="state_id" position="replace">
                    <field name="state_id" class="oe_no_button" placeholder="State" 
                        style="width: 37%%" options='{"no_open": True}' 
                        on_change="onchange_state(state_id)" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                </field>
                
                <field name="country_id" position="after">
                    <field name="distrito_id" class="oe_no_button" placeholder="Distrito" domain="[('country_id','=',country_id)]" attrs="{'readonly': [('country_id','=',False)]}"/>                
                    <field name="concelho_id" class="oe_no_button" placeholder="Concelho" domain="[('distrito_id','=',distrito_id)]" attrs="{'readonly': [('distrito_id','=',False)]}"/>
                    <field name="freguesia_id" class="oe_no_button" placeholder="Freguesia" domain="[('concelho_id','=',concelho_id)]" attrs="{'readonly': [('concelho_id','=',False)]}"/>
                </field>
                
            </field>
        </record>



        <menuitem id="menu_l10n_pt_administrative_divisions_distritos" name="Distritos" parent="base.menu_localisation" action="action_l10n_pt_administrative_divisions_distritos"/>
        <menuitem id="menu_l10n_pt_administrative_divisions_concelhos" name="Concelhos" parent="base.menu_localisation" action="action_l10n_pt_administrative_divisions_concelhos"/>
        <menuitem id="menu_l10n_pt_administrative_divisions_freguesia" name="Freguesias" parent="base.menu_localisation" action="action_l10n_pt_administrative_divisions_freguesias"/>
       
        
    </data>
</openerp>